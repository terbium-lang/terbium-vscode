{
  "name": "Terbium",
  "scopeName": "source.terbium",
  "fileTypes": [
    "tb",
    "trb",
    "terbium"
  ],
  "foldingStartMarker": "\\{\\s*$",
  "foldingStopMarker": "^\\s*\\}",
  "patterns": [
    {
      "name": "comment.line.terbium",
      "begin": "//",
      "end": "$"
    },
    {
      "name": "constant.character.terbium",
      "begin": "c(['\"])",
      "end": "\\1",
      "patterns": [
        {
          "include": "#escape_seq"
        },
        {
          "match": "\\S"
        }
      ]
    },
    {
      "include": "#int_literal"
    }
  ],
  "variables": [
    {
      "base_num": "[0-9][0-9_]*"
    },
    {
      "escape_seq": "\\\\(?:[0-7]{1,3}|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8}|[abfnrtv'\"?\\\\])"
    }
  ],
  "repository": {
    "ident": {
      "name": "variable.other.terbium",
      "match": "[a-zA-Z_][a-zA-Z0-9_]*|`[^\\s`]+`"
    },
    "int_literal": {
      "name": "constant.numeric.terbium",
      "match": "[0-9][0-9_]*u?"
    },
    "float_literal": {
      "name": "constant.numeric.terbium",
      "match": "[0-9][0-9_]*(?:\\.[0-9][0-9_]*)?[Ee][+-]?[0-9]+|\\.[0-9][0-9_]*"
    },
    "escape_seq": {
      "name": "constant.character.escape.terbium",
      "match": "\\\\(?:[0-7]{1,3}|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8}|[abfnrtv'\"?\\\\])"
    },
    "string_literal": {
      "begin": "(?:~|$|~$|$~)?(#*)(['\"])",
      "end": "\\2\\1",
      "patterns": [
        {
          "include": "#escape_seq"
        },
        {
          "match": "\\S"
        }
      ]
    },
    "char_literal": {
      "name": "constant.character.terbium",
      "match": "c(['\"])(?:${escape_seq}|\\S)\\1",
      "captures": {
        "2": {
          "name": "constant.character.escape.terbium"
        }
      }
    }
  }
}